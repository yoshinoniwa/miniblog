<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <div id="header">
        <%= render "shared/header"%>
      </div>
      <div id="post">
        <%= render "shared/post"%>
      </div>
      <hr>
      <div id="content">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
