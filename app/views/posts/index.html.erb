
<%= form_for @post do |form| %>
<%= render "form", form: form %>
<%= form.submit "投稿する" %>

<hr>
<% end %>
<% if @posts.present? %>

<table class="list">

  <% @posts.each do |contents| %>
  <tr>
    <td style="text-align: left" ><%= contents.id %> :
    <%= link_to contents.post, contents %>
    <p><%= link_to "いいね",:action => "index",:id=>contents.id%>: <%= @post.like %>|コメント数:|
        <font color="#BDBDBD">投稿日時<%= contents.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %></font>
    </p>
    <hr width="1000" color="#F2F2F2">
  </td>
  </tr>

  <% end %>
</table>

<% else %>
<p>投稿がありません。</p>
<% end %>
