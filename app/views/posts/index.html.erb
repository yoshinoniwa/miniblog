
<% if @posts.present? %>

<%= form_for @post do |form| %>
<%= render "form", form: form %>
<%= form.submit "投稿する" %>
<hr>
<% end %>

<table class="list">

  <% @posts.each do |contents| %>
  <tr>
    <td style="text-align: left" ><%= contents.id %> :
    <%= link_to contents.post, contents %>
    <p>いいね:  |コメント数 |
        <font color="#BDBDBD">投稿時間<%= contents.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %></font>
    </p>
    <hr width="1000" color="#F2F2F2">
  </td>
  </tr>

  <% end %>
</table>

<% else %>
<p>投稿がありません。</p>
<% end %>
